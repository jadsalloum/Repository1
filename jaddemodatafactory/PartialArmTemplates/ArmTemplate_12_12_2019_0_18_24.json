{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "jaddemodatafactory"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/Copy-data-pipeline-omprem-to-datalake')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Copy data1",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [
							{
								"name": "Source",
								"value": "/"
							},
							{
								"name": "Destination",
								"value": "PerfMonData/"
							}
						],
						"typeProperties": {
							"source": {
								"type": "DelimitedTextSource",
								"storeSettings": {
									"type": "FileServerReadSettings",
									"recursive": false,
									"wildcardFileName": "*.*",
									"enablePartitionDiscovery": false
								},
								"formatSettings": {
									"type": "DelimitedTextReadSettings"
								}
							},
							"sink": {
								"type": "DelimitedTextSink",
								"storeSettings": {
									"type": "AzureDataLakeStoreWriteSettings"
								},
								"formatSettings": {
									"type": "DelimitedTextWriteSettings",
									"quoteAllText": true,
									"fileExtension": ""
								}
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"mappings": [
									{
										"source": {
											"name": "(PDH-CSV 4.0) (Arabian Standard Time)(-240)",
											"type": "String"
										},
										"sink": {
											"name": "(PDH-CSV 4.0) (Arabian Standard Time)(-240)",
											"type": "String"
										}
									},
									{
										"source": {
											"name": "\\JWJ-SPS2019\\Memory\\% Committed Bytes In Use",
											"type": "String"
										},
										"sink": {
											"name": "\\JWJ-SPS2019\\Memory\\% Committed Bytes In Use",
											"type": "String"
										}
									},
									{
										"source": {
											"name": "\\JWJ-SPS2019\\Processor(_Total)\\% Processor Time",
											"type": "String"
										},
										"sink": {
											"name": "\\JWJ-SPS2019\\Processor(_Total)\\% Processor Time",
											"type": "String"
										}
									}
								]
							}
						},
						"inputs": [
							{
								"referenceName": "datafromesamserver03",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "DataLakeGen1",
								"type": "DatasetReference"
							}
						]
					}
				],
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/datafromesamserver03')]",
				"[concat(variables('factoryId'), '/datasets/DataLakeGen1')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/DataLakeGen1')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "AzureDataLakeStore1",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureDataLakeStoreLocation",
						"folderPath": "PerfMonData"
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": []
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/datafromesamserver03')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "FileServer1",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "FileServerLocation"
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": [
					{
						"name": "(PDH-CSV 4.0) (Arabian Standard Time)(-240)",
						"type": "String"
					},
					{
						"name": "\\JWJ-SPS2019\\Memory\\% Committed Bytes In Use",
						"type": "String"
					},
					{
						"name": "\\JWJ-SPS2019\\Processor(_Total)\\% Processor Time",
						"type": "String"
					}
				]
			},
			"dependsOn": []
		}
	]
}